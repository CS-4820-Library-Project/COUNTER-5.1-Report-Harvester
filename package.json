{
  "name": "counter-harvester",
  "private": true,
  "version": "0.3.0",
  "main": "./out/main/main.js",
  "author": {
    "name": "UPEI ",
    "email": "membelvadi@upei.ca"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CS-4820-Library-Project/COUNTER-5.1-Report-Harvester.git"
  },
  "build": {
    "appId": "com.counter.reportharvester",
    "productName": "COUNTER Report Haverster",
    "mac": {
      "icon": "public/app-logo.icns",
      "category": "public.app-category.business",
      "type": "distribution",
      "identity": null,
      "target": [
        "dmg",
        "pkg",
        "mas",
        "zip",
        "7z",
        "tar.xz",
        "tar.lz",
        "tar.gz",
        "tar.bz2",
        "dir"
      ]
    },
    "win": {
      "icon": "public/app-logo.ico",
      "target": [
        "nsis",
        "msi",
        "portable",
        "appx",
        "squirrel",
        "7z",
        "zip",
        "tar.xz",
        "tar.lz",
        "tar.gz",
        "tar.bz2",
        "dir"
      ]
    },
    "linux": {
      "icon": "public/app-logo.png",
      "category": "Utility",
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage",
        "freebsd",
        "pacman",
        "p5p",
        "7z",
        "zip",
        "tar.xz",
        "tar.lz",
        "tar.gz",
        "tar.bz2",
        "dir"
      ]
    },
    "files": [
      "out/**/*",
      "public/**/*",
      "settings/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      "prisma/**/*",
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*"
    ]
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production && electron-vite preview",
    "dev": "cross-env NODE_ENV=development && electron-vite dev -w",
    "build": "electron-vite build && npm run prisma:init",
    "dist:m": "cross-env NODE_ENV=production npm run build && electron-builder -m",
    "dist:w": "cross-env NODE_ENV=production npm run build && electron-builder -w",
    "dist:l": "cross-env NODE_ENV=production npm run build && electron-builder -l",
    "pack": "cross-env NODE_ENV=production electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "prisma:init": "prisma generate && prisma db push"
  },
  "dependencies": {
    "@date-io/date-fns": "^3.0.0",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.5",
    "@mui/lab": "^5.0.0-alpha.169",
    "@mui/material": "^5.15.14",
    "@mui/x-date-pickers": "^6.19.4",
    "@prisma/client": "^5.12.1",
    "date-fns": "^3.6.0",
    "electron-log": "^5.1.2",
    "exceljs": "^4.4.0",
    "formik": "^2.4.5",
    "fs-extra": "^11.2.0",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3",
    "tsv-json": "^2.0.0",
    "uuid": "^9.0.1",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/lockfile": "^1.0.4",
    "@types/react-dom": "^18.2.20",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "electron": "^28.2.10",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "lockfile": "^1.0.4",
    "prisma": "^5.12.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
